<Dashboard>:
    BoxLayout:
        orientation: "vertical"
        padding: 24
        spacing: 16

        Label:
            text: "ðŸŽ® Master-level Mini Games Suite"
            font_size: 30
            size_hint_y: 0.15

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.15
            spacing: 10

            Label:
                id: user_label
                text: "User: Guest"
                font_size: 18

            Button:
                text: "Refresh Scores"
                on_release: app.refresh_scores()  # you can implement in App if desired

        Label:
            id: ttt_label
            text: "TicTacToe Wins: (click refresh)"
            font_size: 16

        Label:
            id: chess_label
            text: "Chess Moves: (click refresh)"
            font_size: 16

        Button:
            text: "Play Tic Tac Toe"
            font_size: 20
            on_release: app.root.current = "tic_tac_toe"

        Button:
            text: "Play Chess"
            font_size: 20
            on_release: app.root.current = "chess"

        Button:
            text: "Exit"
            font_size: 16
            on_release: app.stop()
